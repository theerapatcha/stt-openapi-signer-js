{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": [
            "es6"
        ],
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}